# Coverage.py configuration for Campo Sagrado MVP Backend

[run]
source = app
omit =
    */tests/*
    */__init__.py
    */venv/*
    */site-packages/*
    app/main.py
branch = True
parallel = True

[report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

    # Don't complain about protocol definitions
    class .*\bProtocol\):

    # Don't complain about overload definitions
    @overload

[html]
directory = htmlcov
title = Campo Sagrado MVP Backend Coverage Report

[xml]
output = coverage.xml
