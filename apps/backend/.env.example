# ðŸ•Œ Campo Sagrado MVP - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==================== Application ====================
APP_ENV=development  # development | staging | production
APP_DEBUG=true
APP_NAME="Campo Sagrado MVP"
APP_VERSION="2.0.0-mvp"

# ==================== API Server ====================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Hot reload (development only)
API_WORKERS=1    # Number of workers (production: 4)

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# ==================== Database ====================
DATABASE_URL=sqlite:///./storage/organismo.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/campo_sagrado
DATABASE_ECHO=false  # Log SQL queries

# ==================== Claude AI (Anthropic) ====================
ANTHROPIC_API_KEY=sk-ant-api03-xxx  # REQUIRED: Get from https://console.anthropic.com
ANTHROPIC_MODEL=claude-sonnet-4-20250514  # claude-sonnet-4 | claude-haiku-3.5
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_TIMEOUT=60  # seconds

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==================== Logging ====================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json  # json | pretty
LOG_FILE=./logs/app.log

# ==================== Geolocation ====================
# San SebastiÃ¡n de los Reyes, Madrid (default)
LATITUDE=40.5472
LONGITUDE=-3.6228
TIMEZONE=Europe/Madrid
CIUDAD="San SebastiÃ¡n de los Reyes"

# ==================== Obsidian Integration ====================
OBSIDIAN_VAULT_PATH=~/Documents/CampoSagrado
OBSIDIAN_ENABLED=true

# ==================== Security ====================
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== Monitoring ====================
SENTRY_DSN=  # Optional: Sentry error tracking
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==================== Performance ====================
REQUEST_TIMEOUT=30  # seconds
MAX_REQUEST_SIZE=10485760  # 10MB in bytes
ENABLE_COMPRESSION=true

# ==================== Testing ====================
TEST_DATABASE_URL=sqlite:///./storage/test_organismo.db
PYTEST_TIMEOUT=300  # seconds

# ==================== Feature Flags ====================
ENABLE_ESTADO_CERO=true
ENABLE_PLAN_DIA=true
ENABLE_MAGHRIB=true
ENABLE_DIMENSIONES=true
ENABLE_OCTAVAS=false  # TIER 1 - Not in MVP
ENABLE_UNIVERSO_IMAGINAL=false  # TIER 2 - Not in MVP
# Environment
ENVIRONMENT=development